{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@acme/typescript-config/nestjs.json",
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": "./",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": ["src/**/*.ts", "test/**/*.ts", ".eslintrc.cjs", "jest.config.ts"],
  "exclude": ["dist", "node_modules"]
}
