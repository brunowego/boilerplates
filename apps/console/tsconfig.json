{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@acme/typescript-config/nextjs.json",
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "ts-node": {
    "compilerOptions": {
      "module": "ESNext",
      "moduleResolution": "Node"
    }
  },
  "include": [
    ".next/types/**/*.ts",
    "src/**/*.ts",
    "src/**/*.tsx",
    "mikro-orm.config.ts",
    "next-env.d.ts",
    "next.config.mjs",
    "postcss.config.cjs",
    "tailwind.config.ts"
  ],
  "exclude": ["node_modules"]
}
