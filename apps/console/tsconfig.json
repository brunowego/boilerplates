{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "@acme/typescript-config/rsbuild.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "postcss.config.cjs",
    "prettier.config.cjs",
    "rsbuild.config.ts",
    "tailwind.config.ts"
  ],
  "exclude": ["dist", "node_modules"]
}
