{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "pipeline": {
    "clean": {
      "cache": false
    },
    "db:validate": {
      "cache": false
    },
    "db:generate": {
      "cache": false,
      "dependsOn": ["db:validate"]
    },
    "db:push": {
      "cache": false,
      "dependsOn": ["db:generate"]
    },
    "db:reset": {
      "cache": false,
      "dependsOn": ["db:generate"]
    },
    "db:seed": {
      "cache": false,
      "dependsOn": ["db:reset"]
    },
    "db:studio": {
      "cache": false,
      "dependsOn": ["db:generate"]
    },
    "dev": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "test": {
      "cache": false
    },
    "test:debug": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"]
    },
    "start": {
      "dependsOn": ["build"]
    }
  }
}
