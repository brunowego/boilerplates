{
  "name": "@brunowego/nestjs-with-turborepo-db",
  "version": "0.0.0",
  "private": true,
  "license": "UNLICENSED",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "postinstall": "pnpm db:generate",
    "db:validate": "prisma validate",
    "db:generate": "prisma generate",
    "db:generate:watch": "pnpm db:generate --watch",
    "db:push": "prisma db push --skip-generate",
    "db:reset": "ts-node ./src/tasks/reset.ts",
    "db:seed": "ts-node ./src/tasks/seed.ts",
    "dev": "cross-env BROWSER=none prisma studio --hostname 0.0.0.0",
    "build": "prisma generate && tsc"
  },
  "dependencies": {
    "@prisma/client": "~4.11.0"
  },
  "devDependencies": {
    "@faker-js/faker": "~7.6.0",
    "@types/node": "~18.13.0",
    "cross-env": "~7.0.3",
    "fishery": "~2.2.2",
    "prisma": "~4.10.1",
    "ts-node": "~10.9.1",
    "typescript": "~4.9.5"
  },
  "engines": {
    "node": ">=18 <19",
    "npm": ">=8 <9"
  },
  "prisma": {
    "schema": "./src/prisma/schema.prisma"
  }
}
